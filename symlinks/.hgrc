# vim:ft=cfg:
[ui]
username = David Arceneaux <david@davidthemachine.org>
merge = vim -d

[extensions]
convert=
graphlog=
pager=
color=
fetch=
record=
bookmarks=
eol=
prompt=~/contrib/hg-prompt/prompt.py
hggit=
hgcfg=~/contrib/hgcfg/hgext/hgcfg.py
extdiff=

[alias]
log=glog

[pager]
ignore= version, help, update, serve, record
pager = LESS='FRX' less

[merge-tools]
vimdiff.executable = nvim
vimdiff.args = -d $base $local $output $other +close +close

[hooks]
#tag = hg push

[eol]
native=LF
only-consistent=false
fix-trailing-newline=true

[trusted]
users=root,darc,davidarceneaux,darceneaux,jeriksen,www,_www,,www-data,80
groups=_www,www,apache,wheel,80,www-data

[extdiff]
cmd.vdiff=nvim
opts.vdiff=-d -f '+next' '+execute "DirDiff" fnameescape(argv(0)) fnameescape(argv(1))'

