[user]
  name = David Arceneaux
  email = david@davidthemachine.org
[color]
  ui = true
[diff]
  external = ~/dotfiles/git_diff_wrapper
  tool = vimdiff
[format]
  pretty = oneline
[pager]
  diff =
[core]
  #editor = ~/contrib/giteditor/giteditor.sh
  editor = vim
  excludesfile = ~/dotfiles/.gitignore_global
[push]
  default = matching
[alias]
  lol = log --graph --decorate --oneline --all
  ci = commit
  co = checkout
  st = status
  afetch = fetch --all --prune
  br = branch
  diffall = ~/contrib/git-diffall/git-diffall
  d = difftool
  merge-to = "!gitmergeto() { export tmp_branch=`git branch | grep '* ' | tr -d '* '` && git checkout $1 && git merge $tmp_branch && git checkout $tmp_branch; unset tmp_branch; }; gitmergeto"
  #merge-to = "!f() { git checkout $1 && echo git merge $2 && echo git checkout -; }; f"
  ls = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate
  ll = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --numstat
  lnc = log --pretty=format:"%h\\ %s\\ [%cn]"
  filelog = log -u
  fl = log -u
  dl = "!git ll -1"
  dlc = diff --cached HEAD^
  dr = "!f() { git diff "$1"^.."$1"; }; f"
  lc = "!f() { git ll "$1"^.."$1"; }; f"
  diffr = "!f() { git diff "%1"^.."$1"; }; f"
  grep = grep -Ii
  gr = grep -Ii
  gra = "!f() { A=$(pwd) && TOPLEVEL=$(git rev-parse --show-toplevel) && cd $TOPLEVEL && git grep --full-name -In $1 | xargs -I{} echo $TOPLEVEL/{} && cd $A; }; f"
  la = "!git config -l | grep alias | cut -c 7-"
  lasttag = describe --tags --abbrev=0
  lt = describe --tags --abbrev=0
  ours = "!f() { git co --ours $@ && git add $@; }; f"
  theirs = "!f() { git co --theirs $@ && git add $@; }; f"
[difftool]
  prompt = false
