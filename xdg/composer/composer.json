{
  "name": "darceneaux/dotfiles",
  "description": "David Arceneaux global php utilities",
  "license": "MIT",
  "type": "library",
  "autoload": {
    "classmap": [
      "scripts"
    ]
  },
  "repositories": [
    {
      "type": "vcs",
      "url": "https://github.com/AdamMarton/php-stubs-generator"
    } 
  ],
  "require": {
    "felixfbecker/language-server": "@dev",
    "laravel/installer": "@stable",
    "phpmd/phpmd": "@stable",
    "phpstan/phpstan": "@dev",
    "phpunit/phpunit": "@stable",
    "sloanlance/pman-php-manual": "@stable",
    "squizlabs/php_codesniffer": "@dev",
    "wp-coding-standards/wpcs": "@stable",
    "fig-r/psr2r-sniffer": "@stable",
    "psy/psysh": "@stable",
    "wp-cli/wp-cli-bundle": "@stable",
    "giacocorsiglia/stubs-generator": "dev-master"
  },
  "scripts": {
    "post-install-cmd": [
      "DArceneaux\\PHPInstallScripts\\PHPCS::postUpdate",
      "@composer --working-dir=vendor/felixfbecker/language-server parse-stubs"
    ],
    "post-update-cmd": [
      "DArceneaux\\PHPInstallScripts\\PHPCS::postUpdate",
      "@composer --working-dir=vendor/felixfbecker/language-server parse-stubs"
    ]
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "optimize-autoloader": true
}
