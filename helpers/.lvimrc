" vim:et sw=2 ts=2
if g:localvimrc_sourced_once_for_file
  finish
endif

let g:ale_php_phpcs_standard = 'PSR2R'
let g:ale_php_phpcbf_standard = 'PSR2R'

if g:localvimrc_sourced_once
  finish
endif

augroup PROJECT
  autocmd!

  autocmd FileType php setlocal tags=/var/www/vhosts/local.theofficeexpress.com/php.tags
  autocmd FileType php let b:tagcommands = {
  \ 'php': {
  \     'tagfile': '/var/www/vhosts/local.theofficeexpress.com/php.tags',
  \     'args': '--fields=+aimlS --PHP-kinds=+cdfint-av',
  \     'files': '/var/www/vhosts/local.theofficeexpress.com/htdocs/'
  \   }
  \ }

  autocmd FileType javascript setlocal tags=/var/www/vhosts/local.theofficeexpress.com/js.tags
  autocmd FileType javascript let b:tagcommands = {
  \ 'javascript': {
  \     'tagfile': '/var/www/vhosts/local.theofficeexpress.com/js.tags',
  \     'args': '',
  \     'files': '/var/www/vhosts/local.theofficeexpress.com/htdocs/'
  \   }
  \ }
augroup END
