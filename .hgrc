# vim:ft=cfg:
[ui]
username = David Arceneaux <david@davidthemachine.org>
merge = vimdiff

[extensions]
convert=
graphlog=
pager=
color=
fetch=
record=
bookmarks=
eol=
prompt=~/contrib/hg-prompt/prompt.py
#hggit=
extdiff=

[alias]
log=glog

[pager]
ignore= version, help, update, serve, record
pager = LESS='FRX' less

[merge-tools]
vimdiff.executable = vimdiff
vimdiff.args = -d $base $local $output $other +close +close

[hooks]
#tag = hg push

[eol]
native=LF
only-consistent=false
fix-trailing-newline=true

[trusted]
users=root,darc,davidarceneaux,darceneaux,jeriksen,www,_www,,80
groups=_www,www,apache,wheel,80

[extdiff]
cmd.vdiff=vim
opts.vdiff=-f '+next' '+execute "DirDiff" fnameescape(argv(0)) fnameescape(argv(1))'
