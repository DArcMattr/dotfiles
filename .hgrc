# vim:ft=cfg:
[ui]
username = David Arceneaux <darceneaux@aynrand.org>
merge = vimdiff

[extensions]
convert=
graphlog=
pager=
color=
fetch=
record=
bookmarks=
hgext.bookmarks=
eol=
prompt=~/contrib/hg-prompt/prompt.py
#hggit=

[alias]
log=glog

[pager]
ignore= version, help, update, serve, record
pager = LESS='FRX' less

[merge-tools]
vimdiff.executable = vimdiff
vimdiff.args = -d $base $local $output $other +close +close

[hooks]
#tag = hg push

[eol]
native=LF
only-consistent=false
fix-trailing-newline=true

[trusted]
users=root,darc,darceneaux,jeriksen,www,80
groups=www,apache,wheel,80
