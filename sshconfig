# vim:set ft=sshconfig:
# requires netcat for the proxy connections
Host *
  PreferredAuthentications publickey,keyboard-interactive,password
  ServerAliveInterval 20
  ServerAliveCountMax 20
  Compression yes
  CompressionLevel 9
  IdentityFile ~/.ssh/id_rsa
  ControlMaster auto
  ControlPath ~/.ssh/socket-%r@%h:%p
  AddressFamily inet
  CheckHostIP no
  # LocalCommand if [[ $TERM == screen* ]]; then printf "\033k%h\033\\"; fi
  PermitLocalCommand no
  ForwardAgent yes

Host live
  HostName cultureofreason.org
  User ariuser

Host cor
  HostName cultureofreason.org
  User ariuser

Host bb
  HostName bitbucket.org
  User hg

Host github
  HostName github.com
  User git

Host demo
  HostName demo.aynrand.org
  User darceneaux

Host local
  User darc
  HostName localhost

Host personal-git
  HostName centuria-guild.org
  Port 32323
  User git

Host centuria
  HostName centuria-guild.org
  Port 23232
  User darc

Host aynrand2
  HostName aynrand2.org
  Port 32323
  User darc

Host vagrant
  HostName 127.0.0.1
  User vagrant
  Port 2222
  UserKnownHostsFile /dev/null
  StrictHostKeyChecking no
  PasswordAuthentication no
  IdentityFile ~/.vagrant.d/insecure_private_key
  IdentitiesOnly yes
  LogLevel FATAL
  ForwardAgent yes
  IdentityFile ~/contrib/vvv/.vagrant/machines/default/virtualbox/private_key

Host staging
  HostName 10.5.101.20
  User ec2-user
  IdentityFile ~/.ssh/ten-staging.pem

Host preprod
  HostName 10.21.21.40
  User ec2-user
  IdentityFile ~/.ssh/ten-preprod.pem
