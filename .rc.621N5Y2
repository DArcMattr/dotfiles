# vim:ft=zsh:
unfunction sssh

sssh() {
	(TERM=xterm-256color autossh -t "${1}" 'tmux attach || tmux new') 2>/dev/null
}

function listen_elastic {
    sudo nohup tcpdump -A -nn -s 0 \
        'tcp dst port 9200 and (((ip[2:2] - ((ip[0]&0xf)<<2)) - ((tcp[12]&0xf0)>>2)) != 0)' \
        -i lo -w /var/www/vhosts/api-tracker/logs/elastic_queries.log
}
