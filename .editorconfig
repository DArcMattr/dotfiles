root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = tab
quote_type = single
max_line_length = 96

[*.lua]
indent_style = space
indent_size = 4

[*.{jsx,vim}]
indent_style = space
indent_size = 2

[*.md]
max_line_length = 80
trim_trailing_whitespace = false
