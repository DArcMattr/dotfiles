# .aliases
# vim:ft=sh:

if \ls --color=always -d . >/dev/null 2>&1; then
  alias ls='\ls --color=always'
elif \ls -G -d . >/dev/null 2>&1; then # colorls is main system ls already
  alias ls='\ls -G'
elif \colorls -G -d . >/dev/null 2>&1; then
  alias ls='\colorls -G'
else # Solaris or other *NIX
  alias ls='\ls'
fi

alias ll='ls -AalFh'
alias key='man -k'
alias info='info --vi-keys'
alias tmux='tmux -2u'
alias tmuxt='sh ~/dotfiles/.tmux.$HOST'
alias agp='ag --pager=less'

# Suffix aliases
alias -s php=vim
alias -s css=vim
alias -s js=vim

# Functions, used where aliases would break

cdl() {
  cd "${@}"
  ll
}

cdd() {
  cd "${@}"
  dir
}

path() {
  echo "${PATH}" | tr ':' '\n'
}

dir() {
  {
    if \ls --group-directories-first -d . >/dev/null 2>&1; then
      ll --group-directories-first "${@}"
    else
      LL=$(ll "${@}")
      echo ${LL} | grep -E "^d"
      echo ${LL} | grep -E -v "^d|^total"
      echo ${LL} | grep -E "^total"
    fi
  } | $PAGER
}

sssh() {
  (autossh -t "${@}" 'if tmux has; then tmux -2u attach; else tmux -2u new; fi') 2>/dev/null
}

hgdiff() {
  vimdiff -c 'map q :qa!<CR>' <(hg cat "$1") "$1"
}

playtime() {
  if [ -x /usr/local/bin/soxi ]; then
    soxi -d "${@}" 2>&1
  else
    echo "soxi is not installed"
  fi
}

dosass() {
  # TODO: allow for some command line options
  if [ "$#" -eq 1 ]; then
    OUT_FILE="$(dirname "${1}")/$(basename -s .scss "${1}").css"
  else
    OUT_FILE="${2}"
  fi

  if sassc -g "${1}" >/dev/null 2>&1; then
    sassc -glt nested -o "${OUT_FILE}" "${1}"
  else
    sassc -mlt nested "${1}" "${OUT_FILE}"
  fi
}

catmd() {
  PANDOCDIR=$(mktemp -d)
  TMPFILE="${PANDOCDIR}/index.html"

  echo "${TMPFILE}"

  pandoc -s -S --self-contained -c ~/.pandoc/buttondown.css \
    -t html5 -f markdown_phpextra "${@}" -o "${TMPFILE}"

  if command -v "${BROWSER}" &>/dev/null; then
    ${BROWSER} "${TMPFILE}"
  elif command -v "elinks" &>/dev/null; then
    elinks -force-html "file://${TMPFILE}"
  else
    lynx -force_html "file://${TMPFILE}"
  fi
}

sscerts() {
  openssl req -new -newkey rsa:4096 -days 3653 -nodes -x509 -subj '/CN=${1}/O=Zeek Interactive/C=US/ST=California/L=Huntington Beach' -keyout "${1}.key" -out "${1}.cert"
}

