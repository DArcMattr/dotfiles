#!/bin/sh

# XXX pull back into .aliases under a feature check
superupdate() {
  \sudo \sh -c " \
    \apt-get update && \
    \apt-get -y upgrade && \
    \apt-get -y dist-upgrade && \
    \apt-get -y autoremove && \
    \apt-get -y clean"
}

export CC=clang
export CXX=clang++
export TZ='/usr/share/zoneinfo/US/Pacific'
export PATH="$(ruby -rubygems -e 'puts Gem.user_dir')/bin:${PATH}"
